<UserControl
    x:Class="Unison.UWPApp.UI.Views.ChatListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Unison.UWPApp.UI.Views"
    xmlns:models="using:Unison.UWPApp.Models"
    xmlns:controls="using:Unison.UWPApp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="800"
    d:DesignWidth="400">

    <UserControl.Resources>
        <DataTemplate x:Key="ChatItemTemplate" x:DataType="models:ChatItem">
            <Grid Height="72" Padding="12,0" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="56"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Avatar with initial fallback + profile picture overlay -->
                <Grid Width="48" Height="48" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <!-- Fallback: Colored circle with initial (hidden when picture is loaded) -->
                    <Ellipse Width="48" Height="48" Fill="{StaticResource UnisonGreenBrush}"
                             Visibility="{x:Bind AvatarUrl, Mode=OneWay, Converter={StaticResource InvertedStringToVisibilityConverter}}"/>
                    <TextBlock Text="{x:Bind Initial, Mode=OneWay}" 
                               FontSize="20" FontWeight="SemiBold" Foreground="White"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontFamily="{StaticResource MainFontSemibold}"
                               Visibility="{x:Bind AvatarUrl, Mode=OneWay, Converter={StaticResource InvertedStringToVisibilityConverter}}"/>
                    
                    <!-- Profile picture (circular clip) -->
                    <Ellipse Width="48" Height="48" Visibility="{x:Bind AvatarUrl, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{x:Bind AvatarUrl, Mode=OneWay, Converter={StaticResource StringToImageSourceConverter}}" 
                                        Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Grid>
                
                <!-- Name and message -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,12,0">
                    <TextBlock Text="{x:Bind Name, Mode=OneWay}" FontSize="16" FontFamily="{StaticResource MainFontSemibold}" TextTrimming="CharacterEllipsis"/>
                    <TextBlock Text="{x:Bind LastMessage, Mode=OneWay}" FontSize="14" Foreground="#888" TextTrimming="CharacterEllipsis" Margin="0,2,0,0" FontFamily="{StaticResource MainFont}"/>
                </StackPanel>
                
                <!-- Timestamp at far right, aligned to top -->
                <TextBlock Grid.Column="2" Text="{x:Bind Timestamp, Mode=OneWay}" FontSize="12" Foreground="#888" 
                           VerticalAlignment="Top" Margin="0,16,0,0" FontFamily="{StaticResource MainFont}"/>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid x:Name="ChatListGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Mobile-style Header -->
        <Grid Padding="12,8" Background="Transparent" Canvas.ZIndex="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="MenuButton" Click="MenuButton_Click" Background="Transparent" Width="48" Height="48" HorizontalAlignment="Left" VerticalAlignment="Center">
                <FontIcon Glyph="&#xE700;" FontFamily="{StaticResource IconFont}" FontSize="20"/>
            </Button>
            <Button x:Name="NewChatButton" Grid.Column="2" Click="NewChatButton_Click" Background="Transparent" Width="48" Height="48" HorizontalAlignment="Right" VerticalAlignment="Center">
                <FontIcon Glyph="&#xE710;" FontFamily="{StaticResource IconFont}" FontSize="20"/>
            </Button>
        </Grid>
        
        <AutoSuggestBox Grid.Row="1" PlaceholderText="Search" Margin="16,4,16,12" QueryIcon="Find" FontFamily="{StaticResource MainFont}"/>

        <!-- Sticky Sync Status Bar -->
        <Border x:Name="SyncStatusBar" Grid.Row="0" Background="{StaticResource UnisonGreenBrush}" Padding="12,6" Visibility="Collapsed">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <controls:ModernProgressRing IsActive="True" Width="16" Height="16" Foreground="White"/>
                <TextBlock x:Name="SyncStatusText" Text="Updating..." Foreground="White" FontSize="13" 
                           FontFamily="Segoe UI Variable" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>
        
        <ListView Grid.Row="3" x:Name="ChatList" 
                  ItemsSource="{x:Bind Chats}"
                  ItemTemplate="{StaticResource ChatItemTemplate}"
                  SelectionMode="Single"
                  SelectionChanged="ChatList_SelectionChanged"
                  Margin="0,8,0,0"/>
        
        <!-- Loading overlay (only for absolute first load/empty list) -->
        <Grid x:Name="ChatLoadingOverlay" Grid.Row="3" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Visibility="Visible">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <controls:ModernProgressRing IsActive="True" Width="36" Height="36"/>
                <TextBlock Text="Initial Sync..." FontSize="14" Foreground="#888" Margin="0,16,0,0" HorizontalAlignment="Center" FontFamily="{StaticResource MainFont}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
